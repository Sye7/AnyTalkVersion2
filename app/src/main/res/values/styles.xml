<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_accent</item>

    </style>


    <style name="AppTheme.CommentsActivity" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.TransparentActivity">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ContextMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/btn_context_menu_normal</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>



    <style name="MenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="LanguageItemDividerText">
        <item name="android:textSize">@dimen/default_small_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark_blue</item>
        <item name="android:gravity">start|center</item>
        <item name="android:background">@color/visual_gray</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingBottom">8.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">16.0dip</item>
        <item name="android:paddingEnd">16.0dip</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/browser_actions_bg_grey</item>
        <item name="contentInsetStart">0.0dip</item>
    </style>

    <style name="Toolbar.NoPadding">
        <item name="android:background">@color/toolbar_color</item>
        <item name="contentInsetStart">0.0dip</item>
    </style>




    <style name="SearchViewTheme" parent="@style/Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/text_black</item>
    </style>


    <style name="SearchImageView">
        <item name="android:theme">@style/SearchViewTheme</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/visual_gray</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:voiceSearchMode">launchRecognizer|showVoiceSearchButton</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>


    <style name="Caption">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="H3" parent="@style/Heading">
        <item name="android:textSize">20.0sp</item>
    </style>
    <style name="Heading">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DropdownEndText" parent="@style/DropdownText">
        <item name="android:drawableEnd">@drawable/ic_dropdown_arrow</item>
    </style>

    <style name="H2" parent="@style/Heading">
        <item name="android:textSize">24.0sp</item>
    </style>

    <style name="DropdownText">
        <item name="android:textAppearance">@style/Caption</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:drawablePadding">8.0dip</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="SmallImage">
        <item name="android:layout_width">24.0dip</item>
        <item name="android:layout_height">24.0dip</item>
    </style>


    <style name="MediumImage">
        <item name="android:layout_width">34.0dip</item>
        <item name="android:layout_height">34.0dip</item>
    </style>
    <style name="RootNestedScrollView">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:fillViewport">true</item>
    </style>


    <style name="Body">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/visual_blue_gray</item>
        <item name="lineHeight">24.0sp</item>
    </style>


    <style name="Toolbar.NoPadding.BackButton" parent="@style/Toolbar.NoPadding">
        <item name="navigationIcon">?homeAsUpIndicator</item>
    </style>

</resources>
